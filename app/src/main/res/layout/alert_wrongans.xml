<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/circle_wrongans">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:backgroundTint="#3b91d7"
            android:src="@android:color/transparent"
            app:rippleColor="@color/white" />

        <TextView
            android:id="@+id/tv_wrongans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="16dp"
            android:padding="@dimen/padding_5"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />
    </FrameLayout>


    <TextView
        android:id="@+id/tv_alert_wrightans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frame"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="The Correct Answer is"
        android:layout_marginTop="@dimen/margin_10"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btn_alert_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_alert_wrightans"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_centerHorizontal="true"
        android:background="#cae8f9"
        android:layout_marginLeft="@dimen/margin_10"
        android:text="Ok"
        android:textColor="@color/white" />
</RelativeLayout>